<section class="d-flex p-5 w-100 main-content">
    <div class="w-100 single-post-container">
        <div>
            <h2>Create A New Blog Post</h2>
        </div>
        <div class="w-35 mt-3">
            <form id="post-form" class="larger-font">
                <div>
                    <label for="post-title" class="font-weight-bold">Title:</label><br>
                    <input type="text" id="post-title" class="input-form">
                </div>
                <div>
                    <label for="post-body" class="font-weight-bold mt-2">Text:</label><br>
                    <textarea name="post-body" id="post-body" rows="4" class="input-form "></textarea>
                </div>
                <div class="text-right">
                    <button type="submit" class="w-35 mt-3 mb-2 submit-btn">Create Post</button>
                </div>
            </form>
        </div>
        <hr>
        <div>
            <h2>Your Posts</h2>
            <ol class="w-35 post-list" id="user-posts">
                {{#each posts as |post|}}
                <li class="bg-white">
                    {{!-- partial to create each blog post element --}}
                    {{> post-info post}}
                    <div class="d-flex mt-3 font-weight-bold">
                        {{!-- when link is clicked, it will not trigger the delete
                        post click handler on the parent form element --}}
                        <a onclick='event.stopPropagation();' href="/dashboard/edit/{{post.id}}"><p class="m-0 green-text">Edit</p></a>
                        <p class="m-0 ml-3 text-danger delete-post" data-post="{{post.id}}">Delete</p>
                    </div>
                </li>
                {{/each}}
            </ol>
        </div>
    </div>
</section>

<script src="/js/add-post.js"></script>
<script src="/js/delete-post.js"></script>